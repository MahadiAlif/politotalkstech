---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ArticleLayout from '../../components/ArticleLayout.astro';

export async function getStaticPaths() {
  const research = await getCollection('research');
  return research.map(item => ({
    params: { slug: item.slug },
    props: { research: item },
  }));
}

type Props = {
  research: CollectionEntry<'research'>;
};

const { research } = Astro.props;
const { Content } = await research.render();

const metadata: Record<string, string> = {
  'Research Type': research.data.researchType,
  'Advisor': research.data.advisor,
  'Department': research.data.department,
};
---

<BaseLayout title={`${research.data.title} - PolitoTalksTech`}>
  <ArticleLayout
    title={research.data.title}
    author={research.data.author}
    date={research.data.date}
    tags={research.data.tags}
    metadata={metadata}
  >
    <div class="abstract-section">
      <h2>Abstract</h2>
      <p>{research.data.abstract}</p>
    </div>
    <Content />
  </ArticleLayout>
</BaseLayout>

<style>
.abstract-section {
  margin-bottom: var(--space-6);
  padding: var(--space-4);
  background-color: var(--color-surface);
  border-radius: 4px;
}

.abstract-section h2 {
  font-size: var(--text-2xl);
  margin: 0 0 var(--space-3) 0;
}

.abstract-section p {
  margin: 0;
  line-height: var(--leading-relaxed);
}
</style>
